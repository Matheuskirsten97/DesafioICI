@model ProvaCandidato.Web.ViewModels.ClientViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <form method="post">


        <div class="form-group">
            @Html.LabelFor(model => model.cliente.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cliente.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cliente.Nome, "", new { @class = "text-danger" })
            </div>
        </div>
        <div>
            <div class="form-group">
                <label asp-for="CidadeId" class="control-label"></label>
                @if (ViewBag.Cidades != null)
                {

                    <select>

                        @foreach (var cidade in ViewBag.Cidades)
                        {
                            <option id="cidade.Codigo" value="cidade.Codigo">@cidade.Nome</option>

                        }
                    </select>
                }
                <span asp-validation-for="CidadeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="DataNascimento" class="control-label"></label>                
                <input for="DataNascimento" class="form-control" type="date"  />
                <span validation-for="DataNascimento"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" id="btnSubmit" />
        </div>
    </form>

    <div>
        @if (ViewBag.clientesList != null)
        {
            foreach (var cliente in ViewBag.clientesList)
            {
                <div>
                    <h4>@cliente.Nome</h4>
                    <h4>@cliente.DataNascimento</h4>
                    <h4>@cliente.Cidade</h4>
                </div>
            }
        }
        else
        {
            <h4>nenhum cliente encontrado</h4>
        }
    </div>
</body>
</html>
